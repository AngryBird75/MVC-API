<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Daily Planner</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    /* Reset and base styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #333;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 40px 20px;
    }

    .container {
      background: #fff;
      width: 100%;
      max-width: 600px;
      border-radius: 12px;
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
      padding: 30px 40px 40px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    h1 {
      text-align: center;
      font-size: 2.8rem;
      color: #4b0082;
      margin-bottom: 5px;
      user-select: none;
      letter-spacing: 2px;
    }

    #datetime {
      text-align: center;
      font-size: 1.1rem;
      color: #764ba2;
      font-weight: 600;
      user-select: none;
      margin-bottom: 15px;
    }

    form {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
    }

    input[type="text"] {
      flex-grow: 1;
      padding: 14px 20px;
      font-size: 1.1rem;
      border: 2px solid #ddd;
      border-radius: 30px;
      transition: border-color 0.3s ease;
      outline: none;
      box-shadow: inset 0 2px 5px rgba(0,0,0,0.05);
    }
    input[type="text"]:focus {
      border-color: #764ba2;
      box-shadow: 0 0 8px #764ba2;
    }

    button {
      background: #764ba2;
      border: none;
      color: white;
      font-weight: 600;
      font-size: 1.1rem;
      padding: 14px 25px;
      border-radius: 30px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      box-shadow: 0 4px 12px rgba(118,75,162,0.4);
      user-select: none;
    }
    button:hover {
      background: #5a3679;
      box-shadow: 0 6px 15px rgba(90,54,121,0.6);
    }

    ul {
      list-style: none;
      max-height: 400px;
      overflow-y: auto;
      padding-right: 5px;
    }

    ul::-webkit-scrollbar {
      width: 8px;
    }
    ul::-webkit-scrollbar-thumb {
      background-color: #764ba2;
      border-radius: 10px;
    }
    ul::-webkit-scrollbar-track {
      background: #f0f0f0;
      border-radius: 10px;
    }

    li {
          <% if(task.isCompleted && task.completedAt) { %>
            Completed: <%= new Date(task.completedAt).toLocaleString() %>
          <% } %>
        </small>
      </div>
      <div class="actions">
        <a href="/complete/<%= task._id %>" title="Mark Complete">&#10003;</a>
        <a href="/delete/<%= task._id %>" title="Delete Task">&#10005;</a>
      </div>
    </li>
  <% }) %>
</ul>
<ul>
  <% if (tasks.length === 0) { %>
    <li style="text-align: center; color: #666; font-style: italic; background: #fff0f5;">
      No tasks assigned.
    </li>
  <% } else { %>
    <% tasks.forEach(task => { %>
      <!-- <li class="<%= task.isCompleted ? 'done' : '' %>">
         <div>
          <span><%= task.title %></span><br />
          <small style="color:#555; font-size:0.85rem;">
            Assigned: <%= new Date(task.createdAt).toLocaleString() %><br />
            <% if(task.isCompleted && task.completedAt) { %>
              Completed: <%= new Date(task.completedAt).toLocaleString() %>
            <% } %>
          </small>
        </div> -->
        <!-- <div class="actions">
          <a href="/complete/<%= task._id %>" title="Mark Complete">&#10003;</a>
          <a href="/delete/<%= task._id %>" title="Delete Task">&#10005;</a>
        </div>
      </li> -->
    <% }) %>
  <% } %>
</ul>

  </div>

  <script>
    function updateDateTime() {
      const dt = new Date();
      const options = {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: true
      };
      const formatted = dt.toLocaleString('en-US', options);
      document.getElementById('datetime').textContent = formatted;
    }

    updateDateTime(); // initial call
    setInterval(updateDateTime, 1000); // update every second
  </script>
</body>
</html>
